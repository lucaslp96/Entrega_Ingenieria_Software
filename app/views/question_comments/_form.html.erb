<!-- Answer Form -->
<%= form_for  (@question_comment, url: question_question_comment_path, method: :get) do |f| %>
<div class="container">
<div class="form-group">
<%= f.text_area :content, class:"form-control", rows:"3" , required: true, placeholder: 'Escrbí tu comentario acá' %>
<%= f.hidden_field :question_id, value: @question_original %>
<div>
  <%= f.submit 'Comentar',class:'btn btn-primary',role: 'button' %>
</div>
</div>
</div>
<% end %>
