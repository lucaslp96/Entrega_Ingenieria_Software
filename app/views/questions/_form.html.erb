<div class="container">
<%= form_for @question do |f| %>
<div class="form-group">
  <%= f.label :Título %>
  <%= f.text_field :title, class:'form-control', required: true, placeholder: 'Ingrese el título de la pregunta' %>
</div>
<div class="form-group">
<%= f.label :Descripción %>
<%= f.text_area :content, class:"form-control", rows:"7" , required: true, placeholder: 'Ingrese una Descripción' %>
</div>
    <div class="form-group" id:"eleccionEtiquetas">
      <label for="eleccionEtiquetas">Elegí entre 1 y 5 etiquetas relacionadas con el tema de tu pregunta (para seleccionar más de una, mantene apretada la tecla "Control" mientras elegís) :</label>
	<%= f.select :tag_ids,  Tag.all.collect {|x| [x.content, x.id]}, {include_blank: false}, multiple: true, class: "form-control" %>
  <%unless @question.errors[:tag_ids].empty?%>
    <div class="alert alert-danger">
      <%= @question.errors[:tag_ids].join(", ") %>
    </div>
  <% end %>
</div>
<div>
    <%= f.submit 'Publicar',class:'btn btn-primary',role: 'button' %>
</div>
<% end %>
</div>
