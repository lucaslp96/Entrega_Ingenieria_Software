<%= form_for @question do |f| %>
<div class="form-group">
  <%= f.label :Título %>
  <%= f.text_field :title, class:'form-control', required: true, placeholder: 'Ingrese el título de la pregunta' %>
</div>
<div class="form-group">
<%= f.label :Descripción %>
<%= f.text_area :content, class:"form-control", rows:"7" , required: true, placeholder: 'Ingrese una Descripción' %>
</div>
<div class="form-group">
    <%= f.submit 'Publicar',class:'btn btn-primary',role: 'button' %>
</div>
<% end %>
